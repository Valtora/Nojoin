# Use Python 3.11 slim image for lightweight API
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
# ffmpeg is needed for audio duration checks and basic processing
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    git \
    libpq-dev \
    libssl-dev \
    libffi-dev \
    libsndfile1 \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy requirements file
COPY requirements.txt .

# Install Python dependencies, excluding heavy ML libraries
# We filter out torch, torchaudio, torchvision, torchcodec, openai-whisper, pyannote.audio, silero-vad
RUN grep -vE "^torch|^torchaudio|^torchvision|^torchcodec|^openai-whisper|^pyannote.audio|^silero-vad" requirements.txt > requirements.api.txt && \
    pip install --no-cache-dir -r requirements.api.txt

# Copy the rest of the application code
COPY . .

# Expose the port the app runs on
EXPOSE 8000

# Default command
CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
